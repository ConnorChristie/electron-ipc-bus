{
    "compilerOptions": {
        "types" : ["node"],
		"module": "commonjs",
        "declaration": true,
		"moduleResolution": "node",
		"target": "es6",        
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "alwaysStrict" : true,
        "noUnusedLocals" : true,
//        "noUnusedParameters" : true,
        "sourceMap": true,
        "outDir" : "build"
    },
	"include": [
		"./src/index.ts"
	]
}